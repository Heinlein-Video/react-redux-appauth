{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "test/*.ts",
    "test/**/*.ts",
    "src/*.tsx",
    "src/**/*.tsx",
    "test/*.tsx",
    "test/**/*.tsx",
    "examples/*.ts",
    "examples/*.tsx",
    "examples/**/*.ts",
    "examples/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
